<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <h1>
        <%= @user.email %>
      </h1>
      <h1>
      	<%= @user.sex %>
      </h1>
      <h1>
				<%= @user.phonenumber %>
      </h1>
    </section>
    <h3>
		</h3>
    <h5>
    <i class="fa fa-cog fa-fw"></i>
      <%= link_to edit_user_path(current_user), class: "dropbtn" do %>
          编辑信息  
      <% end %>
    </h5>


  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

