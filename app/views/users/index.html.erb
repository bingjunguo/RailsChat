<% provide(:title, 'All users') %>
<h1 class="text-center">用户列表</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <td><%= user.sex %></td>
      <td><%= user.status %></td>
      <% if current_user.admin? && !current_user?(user) %>
    | 	<%= link_to "删除", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  		<% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
